<server description="new server">
  <!-- Enable features -->
  <featureManager>
    <feature>webProfile-8.0</feature>
    <feature>localConnector-1.0</feature>
  </featureManager>
  <!-- To access this server from a remote client add a host attribute to 
        the following element, e.g. host="*" -->
  <httpEndpoint host="*" httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint" />
  <!-- Automatically expand WAR files and EAR files -->
  <applicationManager autoExpand="true" />
  <applicationMonitor updateTrigger="mbean" />
  
  <library id="MySQLLib">
    <fileset dir="${server.config.dir}/resources/mysql" includes="*.jar" />
  </library>
  <dataSource jndiName="jdbc/webapp" transactional="false">
    <jdbcDriver libraryRef="MySQLLib" />
    <properties databaseName="webapp" serverName="mysql" portNumber="3306" user="root" password="supersecret" useSSL="false" allowPublicKeyRetrieval="true"/>
  </dataSource>
</server>
